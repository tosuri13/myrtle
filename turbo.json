{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "aws:build": {
      "outputs": [".aws-sam/**"]
    },
    "aws:deploy": {
      "cache": false,
      "dependsOn": ["aws:build"]
    }
  }
}
